{
    "compilerOptions": {
        "target":"es5",
        "module": "commonjs",
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "./static/js",
        "jsx": "react",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true
    },
    "include": [
        "src/*",
        "typings/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}

